---
const { name, title, text1, text2, belt } = Astro.props;
---

<article>
  <img id="profil" src=`/imgs/${name}.webp` alt=`Billede af ${name}` />

  <div class="info">
    <h2>{title}</h2>
    <p>{text1}</p>
    <p>{text2}</p>
    <img id="belt" src=`/imgs/ikoner/${belt}.svg` alt="Ikon af trænerens karatebælte" />
  </div>
</article>

<style>
  article {
    display: grid;
    grid-template-columns: 0.7fr 1fr;
    max-width: 900px;
    aspect-ratio: 16 / 9;
    margin: var(--s);
    box-shadow: 0 4px 12px rgba(61, 61, 60, 0.2);
    border-radius: 20px;
    position: relative;
    background: white;
  }

  #profil {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 20px 0 0 20px;
  }

  .info {
    padding: var(--s) var(--s) var(--m);
    overflow-wrap: break-word;
    position: relative;
  }

  h2 {
    color: var(--red800);
    margin-top: 0;
  }
  p {
    font-size: 0.8rem;
    margin-bottom: 0.8rem;
  }

  #belt {
    position: absolute;
    bottom: -2rem;
    right: -0.5rem;
    width: 80px;
  }

  @media (min-width: 700px) {
    .info {
      padding: 1rem var(--s) 1rem;
    }

    p {
      font-size: 1.1rem;
    }
  }
</style>
