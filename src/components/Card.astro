---
import StrokeButton from "./StrokeButton.astro";
const { title, hold, text } = Astro.props;
---

<article>
  <img src=`/imgs/${hold}.webp` alt="Billede af karateholdet" />
  <div class="info">
    <h2>{title}</h2>
    <p>{text}</p>
    <div class="button">
      <StrokeButton variant="black-red" text="LÃ¦s mere" page="hold" link={`/hold#${hold}`} />
    </div>
  </div>
</article>

<style>
  article {
    display: grid;
    grid-template-rows: auto 1fr;
    background-color: white;
    justify-self: center;
    margin: 10px;
    border-radius: var(--s);
    box-shadow: 0 4px 12px rgba(61, 61, 60, 0.2); /* det er : --mine-shaft900: #3d3d3c; */
    max-width: clamp(320px, 80vw, 400px) /*370px*/;
    min-height: 345px;
    overflow: hidden;
  }
  article img {
    width: 100%;
    border-radius: var(--s) var(--s) 0 0;
    aspect-ratio: 16 / 9;
    object-fit: cover;
  }
  .info {
    display: flex;
    flex-direction: column;
    padding: 10px var(--m) var(--s);
    row-gap: 15px;
    min-height: 75px;
  }
  @media (min-width: 900px) {
    h2 {
      font-size: clamp(1.3rem, 3vw, 2.3rem);
    }
  }
</style>
