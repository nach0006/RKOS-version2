<style>
  footer {
    display: grid;
    grid-template-columns: 2.5fr 0.5fr 1fr;
    grid-template-rows: 0.5fr 1fr;
    column-gap: 22px;
    row-gap: 12px;
    padding: var(--m) var(--m) var(--M);
    background-color: var(--mine-shaft950);
    color: var(--spring-wood50);
  }

  .intro-text {
    display: none;
  }

  .form-container {
    display: none;
  }

  .nav,
  .social {
    grid-row: span 2;
    display: flex;
    flex-direction: column;
  }

  .logo {
    margin: auto 0 4px;
  }

  .nav ul li {
    margin-top: 11px;
  }

  .social h2 {
    margin-bottom: 8px;
  }

  .contact h2 {
    margin-bottom: 6px;
  }

  .icon-text {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 5px;
  }

  .icon {
    width: 15px;
  }

  .contact {
    align-self: end;
  }

  .bottom {
    grid-column: span 3;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 20px;
  }

  .bottom p {
    font-size: 6px;
  }

  .line {
    width: 80%;
    height: 1px;
    margin-bottom: 0.5rem;
  }

  @media (min-width: 900px) {
    footer {
      grid-template-columns: 3.1fr 4fr 2fr 1fr;
      grid-template-rows: 1.5fr 1fr;
      padding: var(--M) var(--M) var(--L);
    }

    .intro-text {
      display: grid;
      max-width: 38ch;
    }

    .form-container {
      display: flex;
      flex-direction: column;
      grid-row: span 2;
      align-items: center;
    }

    form {
      display: flex;
      flex-direction: column;
    }

    input,
    textarea {
      background-color: var(--spring-wood50);
      border: none;
      font-family: futura-pt, sans-serif;
      font-size: 16px;
      border-radius: 5px;
      padding: 15px;
      margin: 12px;
    }

    .rb,
    .check {
      width: 200px;
      align-self: center;
      padding-top: var(--s);
    }
    .active {
      display: block;
    }

    .noshow {
      display: none;
    }

    .contact-info {
      display: flex;
      flex-direction: row;
      gap: 30px;
      white-space: nowrap;
    }

    .icon {
      width: 25px;
    }

    .bottom {
      grid-column: span 4;
    }

    .bottom p {
      font-size: 14px;
      margin-top: 6px;
    }
  }

  /* fonts */
  h1 {
    font-size: 22px;
    max-width: 18ch;
  }

  h2 {
    font-size: 12px;
  }

  .nav h2,
  .social h2,
  .form-container h2 {
    margin-top: 14px;
  }

  p {
    font-size: 8px;
    line-height: 12px;
  }

  ul {
    list-style: none;
  }

  ul a,
  a {
    font-family: futura-pt, sans-serif;
    text-transform: none;
    color: var(--spring-wood50);
    font-size: 8px;
  }

  @media (min-width: 680px) {
    h1 {
      font-size: 38px;
    }

    h2 {
      font-size: 22px;
    }

    p,
    li a,
    b {
      font-size: 16px;
      line-height: 22px;
    }

    .contact h2 {
      margin-bottom: 11px;
    }
  }

  /* hover effekter */

  a:hover,
  li a:hover {
    color: var(--red700);
    transition: color 0.6s ease;
  }
</style>
