<!-- Hjælp fra ChatGPT til at lave en carousel effekt hvor den ændrer citat og navn efter 8s -->
<script type="module">
  const quotes = [
    { text: '"God sund disciplin under træningen, men før og efter taler vi godt sammen på tværs af alder, køn og ikke mindst bæltegrader."', author: "Pia" },
    { text: '"Man får lov at rykke sig meget, men under forhold mærket af tryghed og respekt for individet."', author: "Chelsie" },
    { text: '"Før jeg startede i RKOS, kunne jeg dårligt tage fem armbøjninger. Her 4 måneder senere, kan jeg tage tyve på en god dag."', author: "Mike Wenøe" },
    { text: '"Træning, teknik og trælår."', author: "Nette" },
  ];

  let index = 0;
  const quoteEl = document.getElementById("quote");
  const authorEl = document.getElementById("author");

  setInterval(() => {
    index = (index + 1) % quotes.length;
    quoteEl.textContent = quotes[index].text; // opdaterer teksten i <p id="quote"> med det nye citat
    authorEl.textContent = quotes[index].author; // opdaterer teksten i <p id="author"> med forfatterens navn
  }, 8000); // hver 8s
</script>
